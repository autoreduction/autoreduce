{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "-v",
                "${file}"
            ],
            "django": true,
            "presentation": {
                "hidden": false,
                "group": "autoreduce-test",
            },
            "env": {
                "DISPLAY": ":1",
                "RUNNING_VIA_PYTEST": "true",
                "SELENIUM_REMOTE": "1"
            },
            "justMyCode": false
        },
        {
            "name": "Pytest unit tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "--ignore=autoreduce_qp/systemtests",
                "-v",
                "autoreduce_qp"
            ],
            "django": true,
            "presentation": {
                "hidden": false,
                "group": "autoreduce-test",
            },
            "env": {
                "DISPLAY": ":1",
                "RUNNING_VIA_PYTEST": "true",
                "SELENIUM_REMOTE": "1"
            },
            "justMyCode": false
        },
        {
            "name": "Pytest system tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "-v",
                "autoreduce_qp/systemtests"
            ],
            "django": true,
            "presentation": {
                "hidden": false,
                "group": "autoreduce-test",
            },
            "env": {
                "DISPLAY": ":1",
                "RUNNING_VIA_PYTEST": "true",
                "SELENIUM_REMOTE": "1"
            },
            "justMyCode": false
        },
        {
            "name": "Pytest all",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "-v",
                "autoreduce_qp"
            ],
            "django": true,
            "presentation": {
                "hidden": false,
                "group": "autoreduce-test",
            },
            "env": {
                "DISPLAY": ":1",
                "RUNNING_VIA_PYTEST": "true",
                "SELENIUM_REMOTE": "1"
            },
            "justMyCode": false
        },
        {
            "name": "Pytest - coverage",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--cov-report",
                "html",
                "--cov=${workspaceFolder}/queue_processors",
                "-v",
                "${file}"
            ],
            "presentation": {
                "hidden": false,
                "group": "autoreduce-test",
            },
            "env": {
                "DISPLAY": ":1",
                "RUNNING_VIA_PYTEST": "true",
                "SELENIUM_REMOTE": "1"
            }
        },
        {
            "name": "Run Autoreduce queue listener",
            "type": "python",
            "request": "launch",
            "program": "queue_processors/queue_processor/queue_listener.py",
            "console": "integratedTerminal",
            "presentation": {
                "hidden": false,
                "group": "autoreduce-run",
                "order": 1
            }
        },
        {
            "name": "Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/autoreduce"
                }
            ]
        },
    ]
}