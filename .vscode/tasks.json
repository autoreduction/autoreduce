{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build database",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "setup.py",
                "database"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Install fixtures",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "setup.py",
                "fixtures"
            ],
            "problemMatcher": [],
        },
        {
            "label": "Run Docker Queue Processor",
            "type": "shell",
            "command": "docker",
            "isBackground": true,
            "args": [
                "run",
                "--rm",
                "--network=host",
                "-v",
                "${workspaceFolder}:/autoreduce",
                "--name",
                "queue-processor-debugpy",
                "-it",
                "autoreduction/qp",
                "python3",
                "-m",
                "debugpy",
                "--listen",
                "5678",
                "--wait-for-client",
                "/autoreduce/queue_processors/queue_processor/queue_listener.py"
            ]
        },
        {
            "label": "Kill queue-processor-debugpy",
            "type": "shell",
            "command": "docker kill queue-processor-debugpy",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run Docker Web App",
            "type": "shell",
            "command": "docker",
            "isBackground": true,
            "args": [
                "run",
                "--rm",
                "--network=host",
                "-v",
                "${workspaceFolder}:/autoreduce",
                "--name",
                "webapp-debugpy",
                "-it",
                "autoreduction/qp",
                "python3",
                "-m",
                "debugpy",
                "--listen",
                "5679",
                "--wait-for-client",
                "/autoreduce/WebApp/autoreduce_webapp/manage.py",
                "runserver"
            ]
        },
        {
            "label": "Kill webapp-debugpy",
            "type": "shell",
            "command": "docker kill webapp-debugpy",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run ActiveMQ Docker",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--name",
                "activemq",
                "-p",
                "61613:61613",
                "-p",
                "8161:8161",
                "-it",
                "rmohr/activemq"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}